<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Add Owner Form -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between">
                        <h5 class="mb-0">Add Owner</h5>
                        <a href="/"><button class="btn-close"></button></a>
                    </div>
                    <div class="card-body">
                        <form id="ownerForm" action="/owner_added" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="ownerName" class="form-label">Owner Name</label>
                                <input type="text" class="form-control" id="ownerName" name="owner_name"
                                    placeholder="Enter Owner Name" required>
                            </div>

                            <div class="mb-3">
                                <label for="ownerImage" class="form-label">Owner Image</label>
                                <input type="file" class="form-control" id="ownerImage" name="owner_image" required>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Save Owner</button>
                                <div class="ms-auto">
                                    <a href=""><button type="reset" class="btn btn-secondary">Reset</button></a>
                                    <a href="/"><button type="button" class="btn btn-secondary">Back</button></a>
                                </div>
                            </div>

                        </form>


                    </div>
                </div>
            </div>

            <!-- Owner List -->
            <!-- Owner List -->
            <div class="col-md-8 mt-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Owner List</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Owner ID</th>
                                    <th>Owner Name</th>
                                    <th>Owner Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% owners.forEach(owner=> { %>
                                    <tr>
                                        <td>
                                            <%= owner.id %>
                                        </td>
                                        <td>
                                            <%= owner.owner_name %>
                                        </td>
                                        <td>
                                            <img src="uploads/<%=owner.owner_image %>" alt="Owner Image" width="50"
                                                height="50">
                                        </td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#deleteModal<%= owner.id %>">
                                                Delete
                                            </button>

                                            <div class="modal fade" id="deleteModal<%= owner.id %>" tabindex="-1"
                                                aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deleteModalLabel">Confirm
                                                                Deletion</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete <strong>
                                                                <%= owner.owner_name %>
                                                            </strong>?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Cancel</button>
                                                            <a href="/delete_owner/<%= owner.id %>"
                                                                class="btn btn-danger">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>